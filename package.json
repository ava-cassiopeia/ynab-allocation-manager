{
  "name": "ynab-allocation-manager",
  "version": "0.15.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test:ng": "firebase emulators:exec 'ng test --browsers ChromeHeadless --watch false'",
    "test:fn": "firebase emulators:exec 'npm run --prefix functions test'",
    "test": "npm run test:ng && npm run test:fn",
    "test:e2e": "npm run build && firebase emulators:exec 'playwright test'",
    "test:e2e:update": "firebase emulators:exec 'playwright test --update-snapshots'",
    "emulate": "npm --prefix functions run build && dotenv -e .env.dev -- firebase emulators:start"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.0.3",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.0.3",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "firebase": "^11.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "ynab": "^2.9.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.1",
    "@angular/cli": "^20.0.1",
    "@angular/compiler-cli": "^20.0.0",
    "@dotenvx/dotenvx": "^1.44.2",
    "@playwright/test": "^1.55.0",
    "@types/jasmine": "~5.1.0",
    "dotenv-cli": "^8.0.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright": "^1.55.0",
    "typescript": "~5.8.2"
  }
}
