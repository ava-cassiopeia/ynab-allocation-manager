{
  "name": "ynab-allocation-manager",
  "version": "0.15.4",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test:ng": "firebase emulators:exec 'ng test --browsers ChromeHeadless --watch false'",
    "test:fn": "firebase emulators:exec 'npm run --prefix functions test'",
    "test": "npm run test:ng && npm run test:fn",
    "emulate": "npm --prefix functions run build && dotenv -e .env.dev -- firebase emulators:start"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.0.3",
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/material": "^20.0.3",
    "@angular/platform-browser": "^21.0.1",
    "@angular/router": "^21.0.1",
    "firebase": "^11.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "ynab": "^2.9.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.1",
    "@dotenvx/dotenvx": "^1.44.2",
    "@types/jasmine": "~5.1.0",
    "dotenv-cli": "^8.0.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.3"
  }
}
